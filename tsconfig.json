{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true
  }
}
